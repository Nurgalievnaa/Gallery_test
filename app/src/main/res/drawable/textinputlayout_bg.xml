<?xml version="1.0" encoding="utf-8"?>
<!-- textinputlayout_bg.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <stroke android:color="#000000" android:width="2dp"/> <!-- Set the focused border color to black -->
            <solid android:color="#FFFFFF" /> <!-- Set the inside color to white -->
            <corners android:radius="8dp" /> <!-- Optional: Set corner radius -->
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <stroke android:color="#CCCCCC" android:width="2dp"/> <!-- Set the default border color here -->
            <solid android:color="#FFFFFF" /> <!-- Set the inside color to white -->
            <corners android:radius="8dp" /> <!-- Optional: Set corner radius -->
        </shape>
    </item>
</selector>

