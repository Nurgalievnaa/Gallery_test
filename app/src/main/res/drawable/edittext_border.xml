<?xml version="1.0" encoding="utf-8"?>
<!-- edittext_bg.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#000000" /> <!-- Set the focused border color to black -->
            <corners android:radius="6dp" /> <!-- Optional: Set corner radius -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffffff" /> <!-- Set the default border color here -->
            <corners android:radius="8dp" /> <!-- Optional: Set corner radius -->
        </shape>
    </item>
</selector>
